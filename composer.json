{
	"name": "chillerlan/php-http-message-utils",
	"description": "PSR-7/17/18 utils",
	"license": "MIT",
	"type": "library",
	"keywords": [
		"http", "message", "psr-7", "psr-17", "psr-18"
	],
	"minimum-stability": "stable",
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		}
	],
	"support": {
		"issues": "https://github.com/chillerlan/php-http-message-utils/issues",
		"source": "https://github.com/chillerlan/php-http-message-utils"
	},
	"require": {
		"php": "^8.1",
		"ext-json": "*",
		"ext-simplexml": "*",
		"ext-zlib": "*",
		"psr/http-factory":"^1.0"
	},
	"require-dev": {
		"guzzlehttp/psr7": "^2.4",
		"phan/phan": "^5.4",
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"files": [
			"src/includes.php"
		],
		"psr-4": {
			"chillerlan\\HTTP\\Utils\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"chillerlan\\HTTPTest\\Utils\\": "tests/"
		}
	},
	"scripts": {
		"phpunit": "@php vendor/bin/phpunit",
		"phan": "@php vendor/bin/phan"
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"platform-check": true
	}
}
